<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true">


    <LinearLayout
        android:id="@+id/linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:id="@+id/presentAddress_Id1"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:background="@drawable/input_box"
            android:drawableLeft="@drawable/location"
            android:backgroundTint="@color/light_white"
            android:drawablePadding="10dp"
            android:padding="10dp"
            android:text="Present Address"
            android:textSize="20sp" />


        <RelativeLayout
            android:id="@+id/expandable_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/country_Id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="4dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/input_box"
                android:hint="Country"
                android:padding="10dp"
                />

            <EditText
                android:id="@+id/district_Id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/country_Id"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="99dp"
                android:background="@drawable/input_box"
                android:hint="District"
                android:padding="10dp"
                />

            <EditText
                android:id="@+id/postOffice_Id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/district_Id"
                android:layout_marginStart="1dp"
                android:layout_marginTop="17dp"
                android:background="@drawable/input_box"
                android:hint="Post Office"
                android:padding="10dp" />

            <EditText
                android:id="@+id/postalCode_Id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/policeStation_Id"
                android:layout_marginTop="18dp"
                android:background="@drawable/input_box"
                android:hint="Postal Code"
                android:padding="10dp"
                android:inputType="number"
                />


            <EditText
                android:id="@+id/policeStation_Id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/postOffice_Id"
                android:layout_marginTop="18dp"
                android:background="@drawable/input_box"
              android:hint="Police Station"
                android:padding="10dp"
             />


            <EditText
                android:id="@+id/house_Id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/postalCode_Id"
                android:layout_marginTop="18dp"
                android:background="@drawable/input_box"
                android:hint="House/Village/City"
                android:padding="10dp"
                />

            <EditText
                android:id="@+id/Road_Id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/house_Id"
                android:layout_marginTop="18dp"
                android:background="@drawable/input_box"
                android:hint="Road/Block/Sector"
                android:padding="10dp"
                 />

        </RelativeLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>