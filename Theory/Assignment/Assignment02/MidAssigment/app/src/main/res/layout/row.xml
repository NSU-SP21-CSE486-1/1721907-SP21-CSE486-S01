<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true">


    <LinearLayout
        android:id="@+id/linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:id="@+id/presentAddress_Id1"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:background="@drawable/input_box"
            android:drawableLeft="@drawable/location"
            android:backgroundTint="@color/light_white"
            android:drawablePadding="10dp"
            android:padding="10dp"
            android:textSize="20sp" />


        <RelativeLayout
            android:id="@+id/expandable_layout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/presentCountry_Id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="4dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/input_box"
                android:hint="@string/country"
                android:padding="10dp"
                />

            <EditText
                android:id="@+id/presentDistrict_Id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/presentCountry_Id"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="99dp"
                android:background="@drawable/input_box"
                android:hint="@string/district"
                android:padding="10dp"
                />

            <EditText
                android:id="@+id/presentPostOffice_Id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/presentDistrict_Id"
                android:layout_marginStart="1dp"
                android:layout_marginTop="17dp"
                android:background="@drawable/input_box"
                android:hint="@string/post_office"
                android:padding="10dp" />

            <EditText
                android:id="@+id/presentPostalCode_Id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/presentPoliceStation_Id"
                android:layout_marginTop="18dp"
                android:background="@drawable/input_box"
                android:hint="@string/postal_code"
                android:padding="10dp"
                android:inputType="number"
                />


            <EditText
                android:id="@+id/presentPoliceStation_Id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/presentPostOffice_Id"
                android:layout_marginTop="18dp"
                android:background="@drawable/input_box"
              android:hint="@string/police_station"
                android:padding="10dp"
             />


            <EditText
                android:id="@+id/presentHouse_Id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/presentPostalCode_Id"
                android:layout_marginTop="18dp"
                android:background="@drawable/input_box"
                android:hint="@string/house"
                android:padding="10dp"
                />

            <EditText
                android:id="@+id/presentRoad_Id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/presentHouse_Id"
                android:layout_marginTop="18dp"
                android:background="@drawable/input_box"
                android:hint="@string/road"
                android:padding="10dp"
                 />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:id="@+id/permanentAddress_Id1"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:background="@drawable/input_box"
            android:drawableLeft="@drawable/location"
            android:backgroundTint="@color/light_white"
            android:drawablePadding="10dp"
            android:padding="10dp"
            android:textSize="20sp" />


        <RelativeLayout
            android:id="@+id/expandable_layout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/permanentCountry_Id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="4dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/input_box"
                android:hint="@string/country"
                android:padding="10dp"
                />

            <EditText
                android:id="@+id/permanentDistrict_Id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/permanentCountry_Id"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="99dp"
                android:background="@drawable/input_box"
                android:hint="@string/district"
                android:padding="10dp"
                />

            <EditText
                android:id="@+id/permanentPostOffice_Id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/permanentDistrict_Id"
                android:layout_marginStart="1dp"
                android:layout_marginTop="17dp"
                android:background="@drawable/input_box"
                android:hint="@string/post_office"
                android:padding="10dp" />

            <EditText
                android:id="@+id/permanentPostalCode_Id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/permanentPoliceStation_Id"
                android:layout_marginTop="18dp"
                android:background="@drawable/input_box"
                android:hint="@string/postal_code"
                android:padding="10dp"
                android:inputType="number"
                />


            <EditText
                android:id="@+id/permanentPoliceStation_Id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/permanentPostOffice_Id"
                android:layout_marginTop="18dp"
                android:background="@drawable/input_box"
                android:hint="@string/police_station"
                android:padding="10dp"
                />


            <EditText
                android:id="@+id/permanentHouse_Id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/permanentPostalCode_Id"
                android:layout_marginTop="18dp"
                android:background="@drawable/input_box"
                android:hint="@string/house"
                android:padding="10dp"
                />

            <EditText
                android:id="@+id/permanentRoad_Id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/permanentHouse_Id"
                android:layout_marginTop="18dp"
                android:background="@drawable/input_box"
                android:hint="@string/road"
                android:padding="10dp"
                />

        </RelativeLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>