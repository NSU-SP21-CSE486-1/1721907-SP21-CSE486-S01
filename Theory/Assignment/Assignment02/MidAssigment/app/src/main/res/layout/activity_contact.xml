<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ContactActivity"
    android:layout_gravity="center">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


            <EditText
                android:id="@+id/phone_Id"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="55dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/input_box"
                android:backgroundTint="@color/light_white"
                android:drawableStart="@drawable/phone"
                android:drawablePadding="10dp"
                android:ems="10"
                android:hint="@string/phone"
                android:inputType="phone"
                android:textColorHint="@color/gray" />

        <androidx.cardview.widget.CardView
            android:id="@+id/Cardview1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="50dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/phone_Id"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ffffff"
                android:onClick="expand1">

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/input_box"
                    android:backgroundTint="@color/light_white"
                    android:padding="16dp"
                    android:text="@string/present_address"
                    android:textColor="#4C4C4C"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/expandable1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="#F5F5F5"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView1">

                    <EditText
                        android:id="@+id/presentCountryId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:ems="10"
                        android:hint="@string/country"
                        android:inputType="textPersonName"
                        android:padding="16dp"
                        android:textColor="@color/black"
                        android:textColorHint="#4c4c4c"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="1.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <EditText
                        android:id="@+id/presentDistrictId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:ems="10"
                        android:hint="@string/district"
                        android:inputType="textPersonName"
                        android:padding="16dp"
                        android:textColor="@color/black"
                        android:textColorHint="#4c4c4c"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/presentCountryId"
                        tools:ignore="MissingConstraints" />

                    <EditText
                        android:id="@+id/presentPostOfficeId"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:ems="10"
                        android:hint="@string/post_office"
                        android:inputType="textPersonName"
                        android:padding="16dp"
                        android:textColor="@color/black"
                        android:textColorHint="#4c4c4c"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/presentDistrictId"
                        tools:ignore="MissingConstraints" />

                    <EditText
                        android:id="@+id/presentPoliceStationId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:ems="10"
                        android:hint="@string/police_station"
                        android:inputType="textPersonName"
                        android:padding="16dp"
                        android:textColor="@color/black"
                        android:textColorHint="#4c4c4c"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/presentPostOfficeId"
                        tools:ignore="MissingConstraints" />

                    <EditText
                        android:id="@+id/presentPostalCodeId"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:ems="10"
                        android:hint="@string/postal_code"
                        android:inputType="textPersonName"
                        android:padding="16dp"
                        android:textColor="@color/black"
                        android:textColorHint="#4c4c4c"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/presentPoliceStationId"
                        tools:ignore="MissingConstraints" />

                    <EditText
                        android:id="@+id/presentHouseId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:ems="10"
                        android:hint="@string/house"
                        android:inputType="textPersonName"
                        android:padding="16dp"
                        android:textColor="@color/black"
                        android:textColorHint="#4c4c4c"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/presentPostalCodeId"
                        tools:ignore="MissingConstraints" />

                    <EditText
                        android:id="@+id/presentRoadId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:ems="10"
                        android:hint="@string/road"
                        android:inputType="textPersonName"
                        android:padding="16dp"
                        android:textColor="@color/black"
                        android:textColorHint="#4c4c4c"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/presentHouseId"
                        tools:ignore="MissingConstraints" />


                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/Cardview2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="50dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Cardview1">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ffffff"
               >

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:text="@string/permanent_address"
                    android:textColor="#4C4C4C"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/expandable2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="#F5F5F5"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView2">

                    <EditText
                        android:id="@+id/permanentCountryId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:ems="10"
                        android:hint="@string/country"
                        android:inputType="textPersonName"
                        android:padding="16dp"
                        android:textColor="@color/black"
                        android:textColorHint="#4c4c4c"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="1.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <EditText
                        android:id="@+id/permanentDistrictId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:ems="10"
                        android:hint="@string/district"
                        android:inputType="textPersonName"
                        android:padding="16dp"
                        android:textColor="@color/black"
                        android:textColorHint="#4c4c4c"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/permanentCountryId"
                        tools:ignore="MissingConstraints" />

                    <EditText
                        android:id="@+id/permanentPostOfficeId"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:ems="10"
                        android:hint="@string/post_office"
                        android:inputType="textPersonName"
                        android:padding="16dp"
                        android:textColor="@color/black"
                        android:textColorHint="#4c4c4c"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/permanentDistrictId"
                        tools:ignore="MissingConstraints" />

                    <EditText
                        android:id="@+id/permanentPoliceStationId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:ems="10"
                        android:hint="@string/police_station"
                        android:inputType="textPersonName"
                        android:padding="16dp"
                        android:textColor="@color/black"
                        android:textColorHint="#4c4c4c"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/permanentPostOfficeId"
                        tools:ignore="MissingConstraints" />

                    <EditText
                        android:id="@+id/permanentPostalCodeId"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:ems="10"
                        android:hint="@string/postal_code"
                        android:inputType="textPersonName"
                        android:padding="16dp"
                        android:textColor="@color/black"
                        android:textColorHint="#4c4c4c"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/permanentPoliceStationId"
                        tools:ignore="MissingConstraints" />

                    <EditText
                        android:id="@+id/permanentHouseId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:ems="10"
                        android:hint="@string/house"
                        android:inputType="textPersonName"
                        android:padding="16dp"
                        android:textColor="@color/black"
                        android:textColorHint="#4c4c4c"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/permanentPostalCodeId"
                        tools:ignore="MissingConstraints" />

                    <EditText
                        android:id="@+id/permanentRoadId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:ems="10"
                        android:hint="@string/road"
                        android:inputType="textPersonName"
                        android:padding="16dp"
                        android:textColor="@color/black"
                        android:textColorHint="#4c4c4c"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/permanentHouseId"
                        tools:ignore="MissingConstraints" />


                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/save_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:onClick="save"
            android:text="@string/view_button"
            app:backgroundTint="@color/green"
            android:textColor="@color/light_white"
           />

    </ScrollView>

</LinearLayout>