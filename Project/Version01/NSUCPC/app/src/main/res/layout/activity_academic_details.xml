<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AcademicDetailsActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F4F4F4">


        <TextView
            android:id="@+id/academicDetailsId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="56dp"
            android:text="@string/your_academic_details"
            android:textColor="@color/button_background"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/academicInstitutionNameId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:background="@drawable/input_box"
            android:backgroundTint="#E4E1E1"
            android:ems="10"
            android:hint="@string/institution_name"
            android:inputType="textPersonName"
            android:paddingLeft="30dp"
            android:textColorHint="#546160"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.505"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/academicDetailsId" />

        <EditText
            android:id="@+id/academicDegreeTittleId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/input_box"
            android:backgroundTint="#E4E1E1"
            android:ems="10"
            android:hint="@string/degree_tittle"
            android:inputType="textPersonName"
            android:paddingLeft="30dp"
            android:textColorHint="#546160"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.494"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/academicInstitutionNameId" />


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/academicSchoolId"
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.505"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/academicDegreeTittleId"
           >

            <AutoCompleteTextView
                android:id="@+id/School_list_Id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/light_white"
                android:inputType="none"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="@string/school"
                android:textColor="@color/gray" />
        </com.google.android.material.textfield.TextInputLayout>

