        <EditText
            android:id="@+id/academicCgpaId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/input_box"
            android:backgroundTint="#E4E1E1"
            android:ems="10"
            android:hint="@string/cgpa"
            android:inputType="numberDecimal"
            android:paddingLeft="30dp"
            android:textColorHint="#546160"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.505"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/academicDepartmentId" />

        <EditText
            android:id="@+id/academicPassingYearId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/input_box"
            android:backgroundTint="#E4E1E1"
            android:ems="10"
            android:hint="@string/passing_year"
            android:inputType="numberDecimal"
            android:paddingLeft="30dp"
            android:textColorHint="#546160"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.505"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/academicCgpaId" />


        <EditText
            android:id="@+id/academicDurationId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/input_box"
            android:backgroundTint="#E4E1E1"
            android:ems="10"
            android:hint="@string/duraion"
            android:inputType="textPersonName"
            android:paddingLeft="30dp"
            android:textColorHint="#546160"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.505"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/academicPassingYearId" />


        <Button
            android:id="@+id/academicSaveButtonId"
            android:layout_width="150dp"
            android:layout_height="45dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/button_box"
            android:onClick="save"
            android:text="@string/save"
            android:textColor="@color/light_white"
            android:textSize="20sp"
            android:textStyle="bold"
            app:backgroundTint="#6DA396"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.827"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/academicDurationId" />

