<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PersonalDetailsActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F4F4F4">


        <TextView
            android:id="@+id/academicDetailsId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="56dp"
            android:text="Your Academic Details"
            android:textColor="@color/button_background"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/academicInstitutionNameId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:background="@drawable/input_box"
            android:backgroundTint="#E4E1E1"
            android:ems="10"
            android:hint="Institution Name"
            android:inputType="textPersonName"
            android:paddingLeft="30dp"
            android:textColorHint="#546160"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.505"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/academicDetailsId" />

        <EditText
            android:id="@+id/academicDegreeTittleId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/input_box"
            android:backgroundTint="#E4E1E1"
            android:ems="10"
            android:hint="Degree Tittle"
            android:inputType="textPersonName"
            android:paddingLeft="30dp"
            android:textColorHint="#546160"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.494"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/academicInstitutionNameId" />

        <EditText
            android:id="@+id/academicDepartmentId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/input_box"
            android:backgroundTint="#E4E1E1"
            android:ems="10"
            android:hint="Department"
            android:inputType="textPersonName"
            android:paddingLeft="30dp"
            android:textColorHint="#546160"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.505"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/academicDegreeTittleId" />

        <EditText
            android:id="@+id/academicMajorId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/input_box"
            android:backgroundTint="#E4E1E1"
            android:ems="10"
            android:hint="Major"
            android:inputType="textPersonName"
            android:paddingLeft="30dp"
            android:textColorHint="#546160"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.505"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/academicDepartmentId" />

        <EditText
            android:id="@+id/academicCgpaId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/input_box"
            android:backgroundTint="#E4E1E1"
            android:ems="10"
            android:hint="CGPA"
            android:inputType="numberDecimal"
            android:paddingLeft="30dp"
            android:textColorHint="#546160"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.505"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/academicMajorId" />

        <EditText
            android:id="@+id/academicPassingYearId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/input_box"
            android:backgroundTint="#E4E1E1"
            android:ems="10"
            android:hint="Passing Year"
            android:inputType="numberDecimal"
            android:paddingLeft="30dp"
            android:textColorHint="#546160"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.505"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/academicCgpaId" />


        <EditText
            android:id="@+id/academicDurationId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/input_box"
            android:backgroundTint="#E4E1E1"
            android:ems="10"
            android:hint="Duraion"
            android:inputType="textPersonName"
            android:paddingLeft="30dp"
            android:textColorHint="#546160"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.505"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/academicPassingYearId" />


        <Button
            android:id="@+id/signUpButtonId"
            android:layout_width="150dp"
            android:layout_height="45dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/button_box"
            android:onClick="save"
            android:text="@string/save"
            android:textColor="@color/light_white"
            android:textSize="20sp"
            android:textStyle="bold"
            app:backgroundTint="#6DA396"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.827"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/academicDurationId" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>